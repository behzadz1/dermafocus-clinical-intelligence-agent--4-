# =============================================================================
# DermaAI CKPA Backend Environment Configuration
# =============================================================================

# Application Settings
APP_NAME="DermaAI CKPA API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
LOG_LEVEL="INFO"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# CORS Settings (Frontend URLs)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000,http://localhost:5174"

# API Keys - AI Services
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-your-key-here"

# Get from: https://app.pinecone.io/
PINECONE_API_KEY="your-pinecone-key-here"
PINECONE_ENVIRONMENT="us-east-1"
PINECONE_INDEX_NAME="dermaai-ckpa"

# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-key-here"

# Database Configuration (PostgreSQL for conversation storage)
DATABASE_URL="postgresql://user:password@localhost:5432/dermaai_db"

# Redis Configuration (for caching and session management)
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
API_KEY_HEADER="X-API-Key"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Document Processing
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=".pdf,.docx,.txt,.mp4,.mov"
UPLOAD_DIR="./data/uploads"
PROCESSED_DIR="./data/processed"

# Vector Search Configuration
EMBEDDING_MODEL="text-embedding-3-small"  # OpenAI model
EMBEDDING_DIMENSIONS=1536
VECTOR_SEARCH_TOP_K=10
RERANK_TOP_K=5

# Reranker Configuration
RERANKER_PROVIDER="sentence_transformers"  # Options: sentence_transformers, cohere, jina
RERANKER_MODEL="cross-encoder/ms-marco-MiniLM-L-6-v2"  # For sentence_transformers provider
# Cohere Rerank API (optional, paid): https://cohere.com/rerank
COHERE_API_KEY=""
# Jina Reranker API (optional, paid): https://jina.ai/
JINA_API_KEY=""

# Claude Configuration
CLAUDE_MODEL="claude-3-5-sonnet-20241022"
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.2

# Logging
LOG_FILE="./logs/app.log"
LOG_ROTATION="500 MB"
LOG_RETENTION="30 days"

# Monitoring (optional)
SENTRY_DSN=""
PROMETHEUS_PORT=9090

# Beta Testing Features
ENABLE_VIDEO_PROCESSING=False
ENABLE_IMAGE_ANALYSIS=False
ENABLE_ADVANCED_ANALYTICS=False
